	<div id="loader">
		<div class="dot"></div>
		<div class="dot"></div>
		<div class="dot"></div>
		<div class="dot"></div>
		<div class="dot"></div>
		<div class="dot"></div>
		<div class="dot"></div>
	</div>
</div>
<header>
    <% include partials/header %>
</header>
<div class="tt-breadcrumb">
	<div class="container">
		<ul>
			<li><a href="/">Trang chủ</a></li>
			<li><a href="/products">Cửa hàng</a></li>
			<li>T-Shirt</li>
		</ul>
	</div>
</div>
<div id="tt-pageContent">
	<div class="container-indent">
		<!-- mobile product slider  -->
		<div class="tt-mobile-product-slider visible-xs arrow-location-center slick-animated-show-js">
				<% prod.images.forEach(function(image) { %>
					<div><img src="<%= image %>" alt=""></div>
					<% }); %>
			<div>
				<div class="embed-responsive embed-responsive-16by9">
					<iframe class="embed-responsive-item" src="http://www.youtube.com/embed/GhyKqj_P2E4" allowfullscreen></iframe>
				</div>
			</div>
			<div>
				<div class="tt-video-block">
					<a href="/#" class="link-video"></a>
					<video class="movie" src="/video/video.mp4" poster="/video/video_img.jpg"></video>
				</div>
			</div>
		</div>
		<!-- /mobile product slider  -->
		<div class="container container-fluid-mobile">
			<div class="row">
				<div class="col-6 hidden-xs">
					<div class="tt-product-vertical-layout">
						<div class="tt-product-single-img">
							<div>
								<img class="zoom-product" src='<%= prod.images[0] %>' data-zoom-image="<%= prod.images[0] %>" alt="">
								
							</div>
						</div>
						<div class="tt-product-single-carousel-vertical">
							<ul id="smallGallery" class="tt-slick-button-vertical slick-animated-show-js">
								<li><a class="zoomGalleryActive" href="/#" data-image="<%= prod.images[0] %>" data-zoom-image="<%= prod.images[0] %>"><img src="<%= prod.images[0] %>" alt=""></a></li>
								<% prod.images.forEach(function(image) { %>
									<li><a href="/#" data-image="<%= image %>" data-zoom-image="<%= image %>"><img src="<%= image %>" alt=""></a></li>
								
								<% }); %>
								
							</ul>
						</div>
					</div>
				</div>
				<div class="col-6">
					<div class="tt-product-single-info">
						<div class="tt-wrapper">
							<div class="tt-label">
								<div class="tt-label-new"></div>
								<div class="tt-label-out-stock"></div>
								<div class="tt-label tt-label-sale"></div>
								<div class="tt-label tt-label-our-fatured"></div>
							</div>
						</div>
						<div class="tt-add-info">
							<ul>
								<li><span>Lượt xem:</span> <%= ++prod.viewCounts %></li>
								<li><span>Số lượng:</span> <%= prod.stock %></li>
							</ul>
						</div>
						<h1 class="tt-title"><%= prod.name %></h1>
						<div class="tt-price">
							<span class="new-price"><%= prod.price %>$</span>
							<span class="old-price"></span>
						</div>
						<div class="tt-review">
							<div class="tt-rating">
								<i class="icon-star"></i>
								<i class="icon-star"></i>
								<i class="icon-star"></i>
								<i class="icon-star-half"></i>
								<i class="icon-star-empty"></i>
							</div>
							<a href="#">(<%= allComment %> đánh giá)</a>
						</div>
						<div class="tt-wrapper"> <%= prod.description %>
						</div>
						<div class="tt-wrapper">
							
						</div>
						<div class="tt-swatches-container">
							
