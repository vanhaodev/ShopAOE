								<div class="tt-title-options">Kích cỡ:</div>
								<ul class="tt-options-swatch options-large">
									<% prod.size.forEach(function(sizee) { %>
									<li><a href="/#"><%= sizee %></a></li>
									<% }); %>
								</ul>
							</div>
							
							
